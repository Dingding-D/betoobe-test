{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 100vw; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .flex-between { width: 100%; display: flex; justify-content: space-between; }
</style>

<div class="example-wrapper">
    <div class="flex-between">
        <h1>Hello {{ user.firstname }}! âœ…</h1>
        <a href="{{ path('app_logout') }}"> <button> Log out </button> </a>
    </div>

    <div class="flex-between">
        <div>
            Here are the activities you've registered for :
            {% for activity in userActivities %}
                <h2>{{ activity.name }}</h2>
                <form action="{{ path('app_unsubscribe', {id: activity.id}) }}" method="POST">
                    <button type="submit">
                        Unsubscribe
                    </button>
                </form>
            {% endfor %}
        </div>

        <div>
            Here are the other available activities you can register for :
            {% for activity in activities %}
                <h2>{{ activity.name }}</h2>
                <form action="{{ path('app_subscribe', {id: activity.id}) }}" method="POST">
                    <button type="submit">
                        Subscribe to this activity
                    </button>
                </form>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
